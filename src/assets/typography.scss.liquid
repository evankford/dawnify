  text-transform: {{settings.menu_capitalization | default: "none"}};
  font-weight: {{settings.menu_font_weight | default: "700"}};
  letter-spacing: {{settings.menu_letter_spacing | default: 10 | divided_by: 20.0 | minus: 0.5 }}em;
