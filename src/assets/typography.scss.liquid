summary .header-menu__item {
  font-size: {{settings.menu_font_size | times: 0.9 | default: '17'}}px;
  @media (max-width: 720px) {
    font-size: {{settings.menu_font_size_mobile | times: 0.9 | default: '16'}}px;
  }
}