<link rel="stylesheet" href="{{ 'component-divider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-divider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  #shopify-section-{{section.id}} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{section.id}} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<hr class="divider style--{{ section.settings.style | default: 'transparent' }}" style="--color-foreground: {{ section.settings.color.red }}, {{ section.settings.color.green }}, {{ section.settings.color.blue }}" />

