{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "settings" : [
     {
        "type" : "header",
        "content" : "Typography"
      },
        {
        "type": "select",
        "id": "type_font_family",
        "label": "Font Family",
        "default": "heading",
        "options": [
          {
            "value": "body",
            "label": "Body"
          },
          {
            "value": "heading",
            "label": "Heading"
          },
          {
            "value": "extra",
            "label": "Extra"
          },
          {
            "value" : "script",
            "label" : "Script"
          }
        ]
      },


      {
        "type": "range",
        "id": "type_font_size",
        "label": "Font Size",
        "min": 12,
        "default": 17,
        "max": 25,
        "step": 1
      },
       {
        "type": "range",
        "id": "type_font_size_mobile",
        "label": "Font Size (Mobile)",
        "min": 10,
        "default": 16,
        "max": 23,
        "step": 1
      },
       {
        "type": "range",
        "id": "type_letter_spacing",
        "label": "Letter Spacing",
        "min": 0,
        "default": 10,
        "max": 30,
        "step": 1
      },
       {
        "type": "range",
        "id": "type_line_height",
        "label": "Line Height",
        "min": 7,
        "default": 10,
        "max": 20,
        "step": 1
      },

       {
        "type": "range",
        "id": "type_padding_top",
        "label": "Padding Top",
        "min": 0,
        "default": 5,
        "max": 15,
        "step": 1
      },
       {
        "type": "range",
        "id": "type_padding_bottom",
        "label": "Padding Bottom",
        "min": 0,
        "default": 5,
        "max": 15,
        "step": 1
      },
       {
        "type": "range",
        "id": "type_padding_horiz",
        "label": "Padding Left/Right",
        "min": 0,
        "default": 12,
        "max": 26,
        "step": 1
      },

      {
        "type": "header",
        "content": "Style Choices"
      },

      {
        "type": "select",
        "id": "type_text_style",
        "label": "Text Style",
        "default": "normal",
        "options": [
          {
            "value": "italic",
            "label": "Italic"
          },
          {
            "value": "normal",
            "label": "Normal"
          }
        ]
      },
      {
        "type": "select",
        "id": "type_font_weight",
        "label": "Font Weight",
        "info" : "Make sure you're loading the correct font weight",
        "default": "400",
        "options": [
          {
            "group" : "Light",
            "value": "100",
            "label" : "Thin"
          },
          {
            "group" : "Light",
            "value": "200",
            "label" : "Extra-Light"
          },
          {
            "group" : "Light",
            "value": "300",
            "label" : "Light"
          },
          {
            "group" : "Normal",
            "value": "400",
            "label" : "Normal"
          },
          {
            "group" : "Normal",
            "value": "500",
            "label" : "Medium"
          },
          {
            "group" : "Bold",
            "value": "600",
            "label" : "Semi-Bold"
          },
          {
            "group" : "Bold",
            "value": "700",
            "label" : "Bold"
          },
          {
            "group" : "Black",
            "value": "800",
            "label" : "Semi-Black"
          },
          {
            "group" : "Black",
            "value": "900",
            "label" : "Black"
          }
        ]
      },
      {
        "type": "select",
        "id": "type_capitalization",
        "label": "Capitalization",
        "default": "none",
        "options": [
          {
            "value": "none",
            "label": "Standard"
          },
          {
            "value": "uppercase",
            "label": "All Caps"
          },
          {
            "value": "lowercase",
            "label": "Lowercase"
          }
        ]
      }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Welcome to our store</p>",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "background-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__3.label"
            },
            {
              "value": "accent-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__4.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__5.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        },
        {
          "type" : "checkbox",
          "id" : "closable",
          "label"  : "Closable",
          "default" : true
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}

