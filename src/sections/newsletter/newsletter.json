{
  "name": "t:sections.newsletter.name",
  "tag": "section",
  "settings": [{
        "type": "select",
        "id": "color_scheme",
        "options": [{
            "value": "accent-1",
            "label": "t:sections.rich-text.settings.color_scheme.options__1.label"
        }, {
            "value": "accent-2",
            "label": "t:sections.rich-text.settings.color_scheme.options__2.label"
        }, {
            "value": "background-1",
            "label": "t:sections.rich-text.settings.color_scheme.options__3.label"
        }, {
            "value": "background-2",
            "label": "t:sections.rich-text.settings.color_scheme.options__4.label"
        }, {
            "value": "inverse",
            "label": "t:sections.rich-text.settings.color_scheme.options__5.label"
        }],
        "default": "background-1",
        "label": "t:sections.rich-text.settings.color_scheme.label"
    }, {
        "type": "checkbox",
        "id": "full_width",
        "default": true,
        "label": "t:sections.rich-text.settings.full_width.label"
    }, {
        "type": "header",
        "content": "Section Settings"
    }, {
        "id": "padding_top",
        "label": "Section Spacing Top",
        "type": "range",
        "default": 10,
        "min": 0,
        "max": 30,
        "step": 1
    }, {
        "id": "padding_bottom",
        "label": "Section Spacing Bottom",
        "type": "range",
        "default": 10,
        "min": 0,
        "max": 30,
        "step": 1
    }, {
        "id": "background_color",
        "label": "Background Color",
        "type": "color"
    }, {
        "id": "text_color",
        "label": "Text Color",
        "type": "color"
    }, {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
    },
     {
      "type" : "range",
      "label" : "Background Opacity",
      "id" : "background_opacity",
      "default" : 100,
      "step": 1,
      "min" : 1,
      "max" : 100
    },

    {
        "type": "select",
        "id": "background_style",
        "label": "Background Style",
        "options": [{
            "group": "Large Image",
            "value": "cover",
            "label": "Cover"
        }, {
            "group": "Large Image",
            "value": "contain",
            "label": "Contain"
        }, {
            "group": "Large Image",
            "value": "fixed",
            "label": "Fixed"
        }, {
            "group": "Image Pattern",
            "value": "repeat",
            "label": "Repeat"
        }, {
            "group": "Image Pattern",
            "value": "repeat-x",
            "label": "Repeat Horizontally"
        }, {
            "group": "Image Pattern",
            "value": "repeat-y",
            "label": "Repeat Vertically"
        }]
    }, {
        "type": "text",
        "id": "title",
        "label": "Title (for customizer UX)"
    },
{
    "type" : "text",
    "id" : "id",
    "label" : "ID - for anchor links"
}
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.newsletter.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Subscribe to our emails",
          "label": "t:sections.newsletter.blocks.heading.settings.heading.label"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "t:sections.newsletter.blocks.paragraph.name",
      "limit": 2,
      "settings": [
        {
          "type": "richtext",
          "id": "paragraph",
          "default": "<p>Be the first to know about new collections and exclusive offers.</p>",
          "label": "t:sections.newsletter.blocks.paragraph.settings.paragraph.label"
        }
      ]
    },
    {
      "type": "email_form",
      "name": "t:sections.newsletter.blocks.email_form.name",
      "limit": 1
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.newsletter.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "paragraph"
        },
        {
          "type": "email_form"
        }
      ]
    }
  ]
}