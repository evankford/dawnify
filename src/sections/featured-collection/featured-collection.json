{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class": "standard-section collection-section",
  "settings": [
    {
      "type": "text",
      "id": "introduction",
      "label": "Introduction"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Featured collection",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type" : "select",
      "id" : "text_align",
      "label" : "Text Align",
      "default" : "spaced",
      "options" : [
        {
          "value" : "spaced",
          "label" : "Spaced"
        },
        {
          "value" : "centered",
          "label" : "Centered"
        }
      ]
    },
    {
      "type" : "header",
      "content" :"Collection Settings"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
      "type" : "select",
      "id" : "grid_size",
      "label" : "Product Size",
      "options" : [
        {
          "value" : "small",
          "label": "Small"
        },
        {
          "value" : "medium",
          "label": "Medium"
        },
        {
          "value" : "large",
          "label": "Large"
        },
        {
          "value" : "huge",
          "label": "Huge"
        }
      ]
    },
    {
      "id": "center_insufficient",
      "label" : "Center insufficient products?",
      "type" : "checkbox"
    },
    {
      "type" : "checkbox",
      "id" : "full_width",
      "label"  :"Full Width"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 32,
      "step": 2,
      "default": 4,
      "label": "t:sections.featured-collection.settings.products_to_show.label"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "t:sections.featured-collection.settings.show_view_all.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.featured-collection.settings.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.featured-collection.settings.header.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.featured-collection.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.featured-collection.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.featured-collection.settings.image_ratio.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.featured-collection.settings.image_ratio.label"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": true,
      "label": "t:sections.featured-collection.settings.show_secondary_image.label"
    },
    {
      "type": "checkbox",
      "id": "add_image_padding",
      "default": false,
      "label": "t:sections.featured-collection.settings.add_image_padding.label"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_vendor.label"
    },
    {
      "type" : "header",
      "content" : "Section Settings"
    },
    {
      "id" :"spacing_top",
      "label" : "Section Spacing Top",
      "type" : "range",
      "default" : 5,
      "min" : 0,
      "max": 30,
      "step" : 1
    },
    {
      "id" :"spacing_bottom",
      "label" : "Section Spacing Bottom",
      "type" : "range",
      "default" : 5,
      "min" : 0,
      "max": 30,
      "step" : 1
    }, {
            "type": "select",
            "id": "color_scheme",
            "options": [{
                "value": "transparent-dark",
                "label": "Dark Text (no bg)"
            }, {
                "value": "transparent-light",
                "label": "Light Text (no bg)"
            }, {
                "value": "accent-1",
                "label": "t:sections.image-banner.settings.color_scheme.options__1.label"
            }, {
                "value": "accent-2",
                "label": "t:sections.image-banner.settings.color_scheme.options__2.label"
            }, {
                "value": "background-1",
                "label": "t:sections.image-banner.settings.color_scheme.options__3.label"
            }, {
                "value": "background-2",
                "label": "t:sections.image-banner.settings.color_scheme.options__4.label"
            }, {
                "value": "inverse",
                "label": "t:sections.image-banner.settings.color_scheme.options__5.label"
            }],
            "default": "background-1",
            "label": "t:sections.image-banner.settings.color_scheme.label"
    },
    {
      "id" : "background_color",
      "label" : "Background Color",
      "type" : "color"
    },
    {
      "id" : "text_color",
      "label" : "Text Color",
      "type" : "color"
    },
    {
      "type" :"image_picker",
      "id" : "background_image",
      "label" : "Background Image"
    },
     {
      "type" : "range",
      "label" : "Background Opacity",
      "id" : "background_opacity",
      "default" : 100,
      "step": 1,
      "min" : 1,
      "max" : 100
    },
    {
      "type" : "select",
      "id" : "background_style",
      "label" : "Background Style",
      "options" : [
        {
          "group" : "Large Image",
          "value" : "cover",
          "label": "Cover"
        },
        {
          "group" : "Large Image",
          "value" : "contain",
          "label" : "Contain"
        },
        {
          "group" : "Large Image",
          "value" : "fixed",
          "label" : "Fixed"
        },
        {
          "group" : "Image Pattern",
          "value" : "repeat",
          "label" : "Repeat"
        },
        {
          "group" : "Image Pattern",
          "value" : "repeat-x",
          "label" : "Repeat Horizontally"
        },
        {
          "group" : "Image Pattern",
          "value" : "repeat-y",
          "label" : "Repeat Vertically"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}