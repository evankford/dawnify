{
  "name": "Password Background",
  "class" : "background-element",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type" : "color",
      "id" : "overlay_color",
      "label" :"Overlay Color"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit" : "%",
      "label": "Overlay Darkness"
    },
   {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "transparent-dark",
          "label": "Dark Text (no bg)"
        },
        {
          "value": "transparent-light",
          "label": "Light Text (no bg)"
        },
        {
          "value": "accent-1",
          "label": "t:sections.image-banner.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.image-banner.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.image-banner.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.image-banner.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.image-banner.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.image-banner.settings.color_scheme.label"
    },
    {
      "type" : "header",
      "content" : "Video"
    },
    {
      "type" : "select",
      "id" : "video_type",
      "label" : "Video Type",
      "default" : "disabled",
      "options" : [
        {
          "value" : "disabled",
          "label" : "Disabled"
        },
        {
          "value" : "uploaded",
          "label" : "Uploaded"
        },
        {
          "value" : "external",
          "label" : "Youtube"
        }
      ]
    },
    {
      "type" : "video_url",
      "label" : "Youtube URL",
      "id" : "youtube_url",
      "accept" : ["youtube"]
    },
    {
      "type" : "url",
      "id" : "uploaded_url",
      "label" : "Uploaded Video URL",
      "info" : "Upload to files, then copy the url to here!"
    },
    {
      "type" : "url",
      "id" : "uploaded_url_small",
      "label" : "Uploaded URL (Small) ",
      "info" : "Upload to files, then copy the url to here!"
    },
    {
      "type" : "checkbox",
      "id" : "allow_unmute",
      "label" : "Allow unmuting?",
      "info"  :"Shows an unmute icon over bottom left of video"
    }
  ]
}