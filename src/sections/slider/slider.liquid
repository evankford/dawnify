{% capture nav %}
{% if section.settings.pagination != "disabled" and section.settings.navigation_style == 'classic' and section.blocks.size > 1 %}
        <div class="swiper-pagination" data-pagination></div>
      {% endif %}
      {% if section.settings.navigation == true %}
        <div class="swiper-navigation style--{{section.settings.navigation_style | default: 'modern'}}">
          <button class="button-icon" data-prev aria-label="Previous Slide">{% if section.settings.navigation_style == "classic" %}{% render 'icon-caret' %}{% else %} {% render 'icon-arrow' %} {% endif %}</button>
          {% if section.settings.pagination != "disabled" and section.settings.navigation_style != 'classic' %}
          <div class="swiper-pagination" data-pagination></div>
          {% endif %}
          <button class="button-icon" data-next aria-label="Next Slide">{% if section.settings.navigation_style == "classic" %}{% render 'icon-caret' %}{% else %} {% render 'icon-arrow' %} {% endif %}</button>
        </div>
      {% endif %}
{% endcapture %}

{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
<script defer src="{{ 'slider.js' | asset_url }}"></script>
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>
<link rel="stylesheet" href="{{ 'component-slider-styles.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-slider-styles.css' | asset_url | stylesheet_tag }}</noscript>{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{%assign is_slide = false %}
{% if section.blocks.size > 1 %}
{% assign is_slide = true %}

<slider-element class="swiper-container {% if section.settings.auto_height != true%} fixed-height {% endif %} gradient color-{{ section.settings.color_scheme | default: 'transparent-light'}} {% if section.settings.content_style == 'static' %} has-content-box {% endif %}"
  {% if section.settings.autoplay_speed > 0 %} data-autoplay="{{ section.settings.autoplay_speed }}"{% endif %}
  {% if section.settings.navigation == true %} data-navigation="true" {% endif %}
  {% if section.settings.pagination != "disabled" %} data-pagination="{{ section.settings.pagination }}"{% endif %}
  {% if section.settings.effect %} data-effect="{{ section.settings.effect }}"{% endif %}
  {% if section.settings.auto_height == true %} data-auto-height="true" {% endif %}
  {% if section.settings.anchor_id != blank %} id="{{section.settings.anchor_id | handleize }}" {% endif %}
  data-content-style="{{section.settings.content_style}}"
  data-content-location="{{section.settings.content_location}}">
  <ul class="swiper-wrapper">
    {% else %}
    <div {% if section.settings.anchor_id != blank %} id="{{section.settings.anchor_id | handleize }}" {% endif %} class="single-slide-wrapper gradient color-{{ section.settings.color_scheme | default: 'inverse' }} {% if section.settings.content_style == 'static' %} has-content-box {% endif %}">
  {% endif %}
  {% for block in section.blocks %}
      {% render 'media-slide' with color_scheme: block.settings.color_scheme, type: block.type, overlay_color: block.settings.overlay_color, overlay_opacity: block.settings.overlay_opacity, settings: block.settings, is_slide: is_slide , auto_height: section.settings.auto_height, is_static: section.settings.content_style == "static" %}
  {% endfor %}

  {% comment %} Resume swiper markup if block size > 1   {% endcomment %}
  {% if section.blocks.size > 1 %}
</ul>
{% endif %}
{% if section.settings.content_style == 'static' %}
  {% assign first_block = section.blocks[0] %}
    <div class="slider-content-box location--{{section.settings.content_location | default: 'bottom-right'}} {% if first_block.type == 'video' or first_block.type == 'image' %} disabled {% endif %}">
      <div data-slider-content class="slider-content-box__inner color-{{section.settings.content_color_scheme | default: 'inverse' }}">
          {% render 'slide-content' with settings: first_block.settings, block: first_block, is_small: true %}
      </div>
      {% if section.settings.navigation_style == 'modern' and section.blocks.size > 1 %} {{ nav }} {% endif %}
    </div>
    {% if section.settings.navigation_style == 'classic' and section.blocks.size > 1 %} {{ nav }} {% endif %}
  {% else %}
{% unless section.blocks.size <= 1 %}
  {{ nav}}
  {% endunless %}
  {% endif %}

{% if section.blocks.size > 1 %}
</slider-element>
{% else %}
</div>
{% endif %}

{% if section.settings.auto_height != true %}
<style>
#shopify-section-{{ section.id }} .swiper-slide {
  height: {{ section.settings.height_mobile | default: 350 }}px
}
@media (min-width: 600px) {
  #shopify-section-{{ section.id }} .swiper-slide {
    height: {{ section.settings.height_tablet | default: 460 }}px
  }
}
@media (min-width: 900px) {
  #shopify-section-{{ section.id }} .swiper-slide {
    height: {{ section.settings.height_standard | default: 460 }}px
  }
}
@media (min-width: 1450px) {
  #shopify-section-{{ section.id }} .swiper-slide {
    height: {{ section.settings.height_widescreen | default: 510 }}px
  }
}
</style>
{% endif %}
