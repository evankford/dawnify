      "options" : [
        {
          "value" : "small",
          "label": "Small"
        },
        {
          "value" : "medium",
          "label": "Medium"
        },
        {
          "value" : "large",
          "label": "Large"
        },
        {
          "value" : "huge",
          "label": "Huge"
        }
      ]
