    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__1.content"
    },
    {
      "type" : "select",
      "id" : "filter_behavior",
      "label" : "Filter Behavior",
      "options" : [
        {
          "value" : "responsive",
          "label" : "Responsive"
        },
        {
          "value" : "filter_button",
          "label" : "Filter Button"
        },
        {
          "value" : "disabled",
          "label" : "disabled"
        }
      ],
      "default" : "responsive"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "t:sections.main-collection-product-grid.settings.enable_filtering.label",
