      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    },
    {
      "type" : "checkbox",
      "id" : "full_width",
      "label"  :"Full Width"
    },
    {
      "type" : "select",
      "id" : "grid_size",
      "label" : "Product Size",
