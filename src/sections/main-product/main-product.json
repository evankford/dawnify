        }
      ]
    },
    {
      "type" : "pre_order",
      "limit" : 1,
      "name" : "Pre-Order Warning",
      "settings" : [
        {
          "type" : "paragraph",
          "content" : "To enable, use the tag 'Pre-Order' on a product. You may use metafields to populate the acceptance text, they have sensible fallback text."
        },
        {
          "type" : "text",
          "id" : "heading",
          "label" : "Heading",
          "default" : "I understand this item is a pre-order"
        },
        {
          "type" : "text",
          "id" : "text",
          "label" : "Text",
          "default" : "This is a pre-order product. It will ship when indicated in the product description."
        }

