{
  "name": "Theme Popup",
  "settings": [
    {
      "type" : "header",
      "content" : "Settings"
    },
    {
      "type" : "checkbox",
      "id" : "theme_popup_enabled",
      "label" : "Enable Theme Popup"
    },
    {
      "type" : "range",
      "id" : "theme_popup_delay",
      "label" : "Delay",
      "unit" : "s",
      "default" : 3,
      "step" : 1,
      "min" : 0,
      "max" : 15
    },
    {
      "type" : "range",
      "id" : "theme_popup_show",
      "label" : "Show once per...",
      "unit" : "hrs",
      "default" : 8,
      "step" : 4,
      "min" : 0,
      "max" : 84
    },
    {
      "type" : "header",
      "content" : "Content"
    },
    {
      "type" : "select",
      "id" : "theme_popup_type",
      "label" : "Type",
      "options" : [
        {
          "value" : "liquid",
          "label" : "Liquid"
        },
        {
          "value" : "image",
          "label" : "Image"
        },
        {
          "value" : "image_liquid",
          "label" : "Image w/ Liquid"
        }
      ]
    },
    {
      "type" : "select",
      "id" : "theme_popup_layout",
      "label" : "Image Layout",
      "options" : [
        {
          "value" : "full_width",
          "label" : "Full Width"
        },
        {
          "value" : "left",
          "label" : "Left"
        },
        {
          "value" : "right",
          "label" : "Right"
        }
      ]
    },
    {
      "type" : "image_picker",
      "id" : "theme_popup_image",
      "label" : "Image"
    },
    {
      "type" : "url",
      "id" : "theme_popup_url",
      "label" : "URL"
    },
    {
      "type" : "liquid",
      "id" : "theme_popup_liquid",
      "label" : "Liquid"
    },
    {
      "type"  :"header",
      "content" : "Developer Settings"
    },
     {
      "type" : "text",
      "id" : "theme_popup_id",
      "default" : "themePopup",
      "label" : "Popup ID",
      "info" : "Used to reset storage/session"
    },
    {
      "type" : "select",
      "id" : "theme_popup_debug",
      "label" : "theme_popup_debug",
      "default" : "customizer_preview",
      "options" : [
        {
          "value" : "always",
          "label"  : "Always"
        },
        {
          "value" : "customizer",
          "label" : "Customizer"
        },
        {
          "value" : "customizer_preview",
          "label" : "Customizer & Preview"
        },
        {
          "value" : "preview",
          "label" : "Preview"
        },
        {
          "value" : "never",
          "label" : "Never"
        }
      ]
    }

  ]
}